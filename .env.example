# ============================================================================
# SUPABASE CONFIGURATION
# ============================================================================
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key

# ============================================================================
# VERCEL FIREWALL & SECURITY
# ============================================================================

# Rate Limiting
# Configurado en Vercel Firewall: 100 requests por IP en ventana de 60 segundos
NEXT_PUBLIC_RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW_SECONDS=60

# Geo-Blocking
# Configurado en Vercel Firewall: Solo permitir Argentina (AR)
NEXT_PUBLIC_GEO_BLOCK_ENABLED=true
ALLOWED_COUNTRIES=AR

# Security Logging
NEXT_PUBLIC_LOG_SECURITY_EVENTS=true
LOG_SECURITY_LEVEL=all  # all, errors, warnings

# ============================================================================
# APPLICATION CONFIGURATION
# ============================================================================

# Entorno
NODE_ENV=development

# URL base (usado en algunos contextos)
NEXT_PUBLIC_APP_URL=http://localhost:3000

# ============================================================================
# DEVELOPMENT ONLY
# ============================================================================

# Debug
DEBUG_SECURITY_HEADERS=false
VERBOSE_LOGGING=false
